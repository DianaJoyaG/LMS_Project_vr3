@page
@model DeleteBorrowingModel

<h2>Delete Borrowing</h2>

<form method="post">
    <div>
        <h4>Are you sure you want to delete this borrowing record?</h4>
        <div>
            <p><strong>Book Title:</strong> @Model.Borrowing.Title</p>
            <p><strong>Author:</strong> @Model.Borrowing.Author</p>
            <p><strong>Reader:</strong> @Model.Borrowing.NameReader</p>
            <p><strong>Borrowed Date:</strong> @Model.Borrowing.BorrowedDate.ToString("d")</p>
            <p><strong>Returned Date:</strong> @Model.Borrowing.ReturnedDate?.ToString("d")</p>
        </div>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index">Cancel</a>
</form>
